{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "rootDirs": [
      ".",
      "./.svelte-kit/types",
      "./$houdini/types"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  }
}
